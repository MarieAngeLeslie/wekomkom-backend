generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Opportunity {
    id               String   @id @default(cuid())
    title            String
    description      String //may be search something bigger as entry type later
    type             String
    sector           String
    target           String
    advantages       String
    selectionProcess String
    dueDate          DateTime
    duration         Int
    location         String
    application_link String
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt
}
